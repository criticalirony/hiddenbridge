    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go: Launch Hidden Bridge",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/hiddenbridge",
            "args": [
                "-config",
                "config.yml",
                "-v",
                "debug"
            ],
            "env": {"VERSION": "1.1.1"},
            "cwd": "${workspaceFolder}",
            "buildFlags": "-ldflags '-X hiddenbridge/pkg/build.version=${config:hb.version} -X hiddenbridge/pkg/build.buildDate=${config:hb.buildDate}'",
        },
        {
            "name": "Go: Launch signcert",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/signcert",
            "args": [
                "-v", "debug",
                "-in", "keys/hiddenbridgeCA.pem",
                "-in-key", "keys/hiddenbridgeCA.key",
                "-out", "keys/goproxy.pem",
                "-out-key", "keys/goproxy.key",
                "-n", "proxy.golang.org",
                "-no-save",
            ],
            "env": {"VERSION": "1.1.1"},
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Go: Launch CA signcert",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/signcert",
            "args": [
                "-v", "debug",
                "-in", "keys/hiddenbridgeCA.pem",
                "-in-key", "keys/hiddenbridgeCA.key",
                "-out", "keys/goproxy.pem",
                "-out-key", "keys/goproxy.key",
                "-n", "proxy.golang.org",
                "-ca",
                "-no-save",
            ],
            "env": {"VERSION": "1.1.1"},
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Python: Test Web Server",
            "type": "python",
            "request": "launch",
            "module": "testws",
            "cwd": "${workspaceFolder}/python/testwebserver"
        },
        {
            "name": "Python: Generate plugins list",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/genpluginimport.py",
            "cwd": "${workspaceFolder}/python/",
            "console": "internalConsole",
            "args": [
                "../config.yml",
                "--output",
                "../plugin_config.go"
            ]
        },
    ]
}